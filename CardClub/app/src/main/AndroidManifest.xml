<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cardclub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.android.cardclub.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.cardclub.Solitaire"
            android:screenOrientation="portrait"
            android:label="Solitaire">
        </activity>

        <activity android:name="com.example.android.cardclub.War"
            android:label="War">
        </activity>
        
        <activity android:name="com.example.android.cardclub.BlackJack"
            android:label="BlackJack">

        </activity>

    </application>

</manifest>